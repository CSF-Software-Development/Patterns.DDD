<?xml version="1.0" encoding="utf-8"?>
<configuration>
  
  <configSections>
    <sectionGroup name="CraigFowlerPatterns">
      <section name="RepositoryFactories"
              type="CraigFowler.Patterns.DDD.Data.RepositoryFactoryConfiguration, Entity" />
      <section name="SessionState"
              type="CraigFowler.Patterns.DDD.SessionState.SessionStorageConfiguration, Entity" />
    </sectionGroup>
  </configSections>
  
  <RepositoryFactories>
    <factories>
      <add name="Default" type="CraigFowler.Patterns.DDD.Mocks.Data.DummyRepositoryFactory">
        <settings>
          <add property="ConnectionString" value="Server=localhost;User=root" />
          <add property="ProviderNamespace" value="MySql.Data" />
        </settings>
      </add>
      <add name="Test" type="CraigFowler.Patterns.DDD.Mocks.Data.DummyConfiguredFactory">
        <settings>
          <add property="ConnectionStringName" value="sample" />
        </settings>
      </add>
      <add name="Memory" type="CraigFowler.Patterns.DDD.Data.MemoryRepositoryFactory" />
    </factories>
  </RepositoryFactories>
  
  <SessionState type="CraigFowler.Patterns.DDD.SessionState.MemorySessionStorage" />

  <connectionStrings>
    <add name="sample"
         connectionString="Server=127.0.0.1;Port=3306;Database=test;User ID=root;Allow User Variables=True"
         providerName="MySql.Data.MySqlClient" />
  </connectionStrings>
  
</configuration>
